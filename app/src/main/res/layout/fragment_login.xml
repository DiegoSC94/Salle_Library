<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rubendiego.salle_library.Login">


    <LinearLayout
        android:id="@+id/botonesLoginRegister"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/azulClaro"
            android:text="@string/login"
            android:textSize="@dimen/textoBotones"
            android:textColor="@color/blanco"
            />

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blanco"
            android:text="@string/register"
            android:textSize="@dimen/textoBotones"
            android:textColor="@color/negro"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/separador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/separador"
        android:layout_alignBottom="@id/botonesLoginRegister"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separador"
        android:layout_marginTop="@dimen/marginUserPass"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginEnd="@dimen/margin40"
        android:hint="@string/username"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="@dimen/marginUserPass"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginEnd="@dimen/margin40"
        android:hint="@string/password"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/marginUserPass"
        android:background="@color/colorPrimary"
        android:text="@string/login"
        android:textSize="@dimen/textoBotones"
        android:textColor="@color/blanco"
        />

</RelativeLayout>
