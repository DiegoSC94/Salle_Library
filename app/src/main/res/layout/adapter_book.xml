<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBook"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginStart="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        />

    <TextView
        android:id="@+id/titleBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_del_libro"
        android:layout_toEndOf="@id/imageBook"
        android:layout_marginStart="@dimen/margin40"
        android:layout_marginTop="@dimen/margin20"
        />

    <TextView
        android:id="@+id/authorBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autor"
        android:layout_alignStart="@id/titleBook"
        android:layout_below="@id/titleBook"
        android:layout_marginTop="@dimen/margin10"
        />

</RelativeLayout>